<?xml version="1.0" encoding="utf-8" ?>
<ContentPage 
    x:Name="PageRoot"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    x:Class="AppFioVermelho.Views.AdminView"
    Title="Área do Administrador"
    BackgroundColor="#FFF5F5F5">

    <ScrollView>
        <VerticalStackLayout Padding="30" Spacing="20" HorizontalOptions="Center">

            <Label Text="Área do Administrador"
                   FontSize="26"
                   FontAttributes="Bold"
                   HorizontalOptions="Center"
                   TextColor="#B71C1C"/>

            <Label Text="{Binding NomeUsuarioLogado, StringFormat='Bem-vindo, {0}!'}"
                   FontSize="16"
                   HorizontalOptions="Center"
                   TextColor="#333333"
                   Margin="0,5,0,20"/>

            <Button Text="Cadastrar Doação"
                    BackgroundColor="#B71C1C"
                    TextColor="White"
                    Command="{Binding AbrirCadastroDoacaoCommand}"
                    HeightRequest="50"
                    CornerRadius="12"/>

            <Button Text="Listar Doações"
                    BackgroundColor="#880E4F"
                    TextColor="White"
                    Command="{Binding AbrirListaDoacoesCommand}"
                    HeightRequest="50"
                    CornerRadius="12"/>

            <Button Text="Ver Histórico"
                    BackgroundColor="#1A237E"
                    TextColor="White"
                    Command="{Binding VerHistoricoCommand}"
                    HeightRequest="50"
                    CornerRadius="12"/>

            <Button Text="Sair"
                    BackgroundColor="#F57C00"
                    TextColor="White"
                    Command="{Binding SairCommand}"
                    HeightRequest="50"
                    CornerRadius="12"/>
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>
