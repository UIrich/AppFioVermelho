<?xml version="1.0" encoding="utf-8" ?>
<ContentPage 
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    x:Class="AppFioVermelho.Views.SigninView"
    Title="Cadastro"
    BackgroundColor="#FFF5F5F5">

    <ScrollView>
        <VerticalStackLayout Padding="30" Spacing="25" HorizontalOptions="Center">

            <Frame 
                Padding="20"
                BackgroundColor="#B71C1C"
                CornerRadius="100"
                HeightRequest="150"
                WidthRequest="150"
                HasShadow="True"
                HorizontalOptions="Center">
                <Image
                    Source="doar2.png"
                    Aspect="AspectFit"
                    HeightRequest="100"
                    WidthRequest="100"/>
            </Frame>

            <Label
                Text="Fio Vermelho"
                FontSize="28"
                FontAttributes="Bold"
                HorizontalOptions="Center"
                TextColor="#B71C1C"/>

            <Frame
                BackgroundColor="White"
                CornerRadius="20"
                Padding="20"
                HasShadow="True">

                <VerticalStackLayout Spacing="15">

                    <Label Text="Nome" FontAttributes="Bold" TextColor="#333333"/>
                    <Frame BackgroundColor="#F5F5F5" CornerRadius="10" Padding="5">
                        <Entry Text="{Binding Nome}" Placeholder="Seu nome completo" TextColor="#000000"/>
                    </Frame>

                    <Label Text="CPF" FontAttributes="Bold" TextColor="#333333"/>
                    <Frame BackgroundColor="#F5F5F5" CornerRadius="10" Padding="5">
                        <Entry Text="{Binding Cpf}" Keyboard="Numeric" Placeholder="000.000.000-00" TextColor="#000000"/>
                    </Frame>

                    <Label Text="E-mail" FontAttributes="Bold" TextColor="#333333"/>
                    <Frame BackgroundColor="#F5F5F5" CornerRadius="10" Padding="5">
                        <Entry Text="{Binding Email}" Keyboard="Email" Placeholder="seu@email.com" TextColor="#000000"/>
                    </Frame>

                    <Label Text="Senha" FontAttributes="Bold" TextColor="#333333"/>
                    <Frame BackgroundColor="#F5F5F5" CornerRadius="10" Padding="5">
                        <Entry Text="{Binding Senha}" IsPassword="True" Placeholder="Informe uma senha" TextColor="#000000"/>
                    </Frame>

                    <HorizontalStackLayout Spacing="10" VerticalOptions="Center">
                        <CheckBox IsChecked="{Binding IsAdmin}" />
                        <Label Text="Sou administrador" VerticalOptions="Center" TextColor="#333333"/>
                    </HorizontalStackLayout>

                    <Button
                        Text="Cadastrar"
                        Command="{Binding CadastrarCommand}"
                        BackgroundColor="#B71C1C"
                        TextColor="White"
                        FontAttributes="Bold"
                        HeightRequest="50"
                        CornerRadius="12"
                        HorizontalOptions="FillAndExpand"/>

                    <Button Text="Voltar"
                    Command="{Binding BackCommand}"
                    BackgroundColor="#F57C00"
                    TextColor="White"
                    CornerRadius="12"
                    HeightRequest="50"/>
                </VerticalStackLayout>
            </Frame>
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>
